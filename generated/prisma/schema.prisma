generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model organization {
  id        String    @id @default(uuid())
  name      String    @unique
  ownerId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  owner   user   @relation("OrganizationOwner", fields: [ownerId], references: [id])
  members user[] @relation("OrganizationMembers")

  @@map("organizations")
}

model user {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  ownedOrganizations organization[] @relation("OrganizationOwner")
  memberOf           organization[] @relation("OrganizationMembers")

  @@map("users")
}

model service {
  id           String    @id @default(uuid())
  name         String
  description  String
  price        Int
  duration     Int
  image        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  observations String?

  @@map("services")
}
