generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model service {
  id           String    @id @default(uuid())
  name         String
  description  String
  price        Int
  duration     Int
  image        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  observations String?

  @@map("services")
}

model user {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}
