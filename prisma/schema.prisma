generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model organization {
  id        String    @id @default(uuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  ownerId   String

  owner          user             @relation("OrganizationOwner", fields: [ownerId], references: [id])
  members        user[]           @relation("OrganizationMembers")
  schedule       schedule[]
  service        service[]
  spaceOfService spaceOfService[]
  appointment    appointment[]
  customer       customer[]

  @@map("organizations")
}

model schedule {
  id             String    @id @default(uuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  weekDay        Int
  startHour      Int
  endHour        Int
  organizationId String

  organization organization @relation(fields: [organizationId], references: [id])

  @@map("schedules")
}

model user {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  ownedOrganizations organization[] @relation("OrganizationOwner")
  memberOf           organization[] @relation("OrganizationMembers")

  @@map("users")
}

model customer {
  id             String    @id @default(uuid())
  name           String
  phone          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  organizationId String

  appointment  appointment[]
  organization organization  @relation(fields: [organizationId], references: [id])

  @@map("customers")
}

model service {
  id             String    @id @default(uuid())
  name           String
  description    String
  price          Int
  duration       Int
  image          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  observations   String?
  organizationId String

  organization organization  @relation(fields: [organizationId], references: [id])
  appointment  appointment[]

  @@map("services")
}

model spaceOfService {
  id             String        @id @default(uuid())
  name           String
  description    String
  organizationId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  organization   organization  @relation(fields: [organizationId], references: [id])
  appointment    appointment[]

  @@map("spaces_of_service")
}

model appointment {
  id           String    @id @default(uuid())
  date         DateTime
  description  String
  observations String
  status       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  canceledAt   DateTime?
  finishedAt   DateTime?

  organizationId   String
  serviceId        String
  spaceOfServiceId String
  customerId       String

  organization   organization   @relation(fields: [organizationId], references: [id])
  service        service        @relation(fields: [serviceId], references: [id])
  customer       customer       @relation(fields: [customerId], references: [id])
  spaceOfService spaceOfService @relation(fields: [spaceOfServiceId], references: [id])

  @@map("appointments")
}
